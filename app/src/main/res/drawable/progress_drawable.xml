<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <stroke android:color="@color/url_bg" android:width="1dp"/>
            <solid android:color="#ffffff"/>

        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>

            <shape>

                <padding
                    android:bottom="@dimen/progress_padding"
                    android:left="@dimen/progress_padding"
                    android:right="@dimen/progress_padding"
                    android:top="@dimen/progress_padding"
                    />

                <solid android:color="@color/url_bg"/>

            </shape>
        </clip>
    </item>
</layer-list>